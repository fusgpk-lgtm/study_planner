<%# app/views/layouts/_base.html.erb %>
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>StudyPlanner</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
  </head>

  <body>
    <header class="app-header">
      <h1 class="header-title">個別指導カリキュラム管理</h1>

      <div class="header-actions">
        <%= link_to students_path, class: "home-button" do %>
          <i data-lucide="home" class="icon"></i>
          <span class="text">ホームに戻る</span>
        <% end %>

        <%= button_to destroy_user_session_path,
                      method: :delete,
                      class: "logout-button",
                      data: { turbo: false } do %>
          <i data-lucide="log-out" class="icon"></i>
          ログアウト
        <% end %>
      </div>
    </header>

    <main class="main-container">
      <%= yield %>
    </main>

    <script>
      document.addEventListener("turbo:load", () => lucide.createIcons());
    </script>
  </body>
</html>